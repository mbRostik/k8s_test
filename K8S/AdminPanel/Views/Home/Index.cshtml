@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>
        Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
    </p>

    <form asp-action="GoToWebApp" asp-controller="Home" method="post">
        <button type="submit" class="btn btn-primary">
            Go to Web Application
        </button>
    </form>

    <p>
        <form asp-action="CallApi" asp-controller="Home" method="post">
            <button type="submit" class="btn btn-success">
                Call WebApplication
            </button>
        </form>
    </p>

    @if (ViewBag.ApiResponse != null)
    {
        <div class="alert alert-info mt-3">
            <strong>API Response:</strong>
            <pre>@ViewBag.ApiResponse</pre>
        </div>
    }
</div>
